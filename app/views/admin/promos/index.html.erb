<% @page_title = human_model_name.humanize.pluralize %>

<%= partial 'admin/shared/collection_option_links' %>

<table class="index">
  <tr>
	<th>Title</th>
	<th>Image</th>
	<th>Intro</th>
	<th>Location</th>
	<th></th>
  </tr>
  <% @promos.each do |promo| %>
  <tr>
	<td><%= promo.title %></td>
	<td><%= image_tag promo.image.url(:thumbnail) %></td>
	<td><%= promo.intro %></td>
	<td><%= promo.location %></td>
	<td class="actions" align="right">
      <%= link_to_with_icon 'edit', 'Edit', edit_object_url(promo) %> &nbsp;
      <%= link_to "#{image_tag('/images/admin/delete.gif')} Delete", object_url(promo), :method => :delete, :confirm => 'Are you sure?' %> &nbsp; 
    </td>
  </tr>
  <% end %>
</table>